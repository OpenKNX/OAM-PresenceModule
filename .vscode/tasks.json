{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PlatformIO",
            "type": "shell",
            "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\pio.exe",
            "args": [
                "run",
                "-e",
                "build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload JLINK",
            "type": "shell",
            "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\pio.exe",
            "args": [
                "run",
                "-e",
                "uploadJLINK",
                "--target",
                "upload"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload ATMEL",
            "type": "shell",
            "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\pio.exe",
            "args": [
                "run",
                "-e",
                "uploadATMEL",
                "--target",
                "upload"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload USB",
            "type": "shell",
            "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\pio.exe",
            "args": [
                "run",
                "-e",
                "uploadUSB",
                "--target",
                "upload"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "OpenKNXproducer-Develop",
            "type": "shell",
            "command": "${env:USERPROFILE}\\bin\\OpenKNXproducer.exe",
            "args": [
                "create",
                "--Debug",
                "src/PMmodul.xml"
            ],
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "OpenKNXproducer-Release",
            "type": "shell",
            "command": "${env:USERPROFILE}\\bin\\OpenKNXproducer.exe",
            "args": [
                "create",
                "--Debug",
                "--Output=src/PresenceModule.knxprod",
                "--HeaderFileName=src/PMmodul.h",
                "src/PMmodul-Release"
            ],
            "problemMatcher": [],
            "group": "test"
        }
    ]
}